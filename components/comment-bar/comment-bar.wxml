<view class="com-bar">
    <view class="wrap">
        <view class="input">
            <input placeholder='添加评论' bindconfirm='addConfirm' value="{{inputValue}}" bindblur='inputBlur'></input>
        </view>
        <image class="comment" src="/icons/comments.png" bindtap='toComment' data-type="{{type}}"></image>
        <image class="like" wx:if="{{support}}" src="/icons/like-on.png" bindtap='cancel'></image>
        <image class="like" wx:else src="/icons/like.png" bindtap="like"></image>
    </view>
</view>