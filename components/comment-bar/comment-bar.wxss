.com-bar {
    position: fixed;
    bottom: 0px;
}
.wrap{
    width:750rpx;
    height:60rpx;
    display: flex;
    flex-direction: row;
    justify-content:flex-end;
    background-color: #0d0d0d;
}

.input {
    background-color: #f2f2f2;
    border-radius: 30px;
    width:100%;
    height:90%;
    margin-left: 10rpx;
}

.input input,
.input,
.comment,
.like{
    position: relative;
    transform: translateY(-50%);
    top:50%;
}
.input input {
    margin-left: 40rpx;
    font-size: 24rpx;
    color:f2f2f2;
}

.comment{
    width:50rpx;
    height:50rpx;
    margin:0 20rpx;
}
.like{
    width:40rpx;
    height:40rpx;
    margin:0 20rpx;
}