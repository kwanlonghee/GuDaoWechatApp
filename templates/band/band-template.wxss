.band-container {
    height: 350rpx;
    width: 350rpx;
    position: relative;
    margin: 10rpx;
}

.band-img {
    height: 350rpx;
    width: 350rpx;
}

.band-bottom {
    position: absolute;
    bottom: 0;
    height: 70rpx;
    width: 100%;
    background-color: rgba(0,0,0,0.5);
    display: flex;
    flex-direction: column;
    text-align: center;
}
.band-likes{
    color:#e9e9e9;
    font-size: 20rpx;
}
.band-name{
    font-size: 28rpx;
}
.band-name,
.highlight{
    color:#fdd700;
}
